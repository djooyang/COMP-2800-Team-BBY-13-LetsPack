 <!-- form handling -->
 <form method="POST" id="add_item">
     <div class="new_user">
         <div>
             <div class="form-group">
                 <label for="item" class="text-light">Item Name <span class='requiredStar'>*</span></label>
                 <input type="hidden" name="id" value="">
                 <input type="text" name="item" value="" placeholder="Frying pen" required>
             </div>
             <div class="form-group">
                 <label for="qty" class="text-light">Quantity <span class='requiredStar'>*</span></label>
                 <input type="number" name="qty" value="" placeholder="Quantity" required>
             </div>
             <div class="form-group">
                 <input type="hidden" name="owner" value="">
							   <input type="hidden" name="eventId" value="<%= event %>">
             </div>
         </div>


         <div class="form-group">
             <button type="submit" class="button-addition update">Save</button>
         </div>

     </div>
 </form>
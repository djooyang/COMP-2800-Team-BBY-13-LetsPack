 <!-- form handling -->
 <form method="POST" id="add_event">
    <div class="new_user">
        <div class="form-group">

            <div class="event-input">
                <label for="name" class="text-light">Name <span class='requiredStar'>*</span> </label>
            <input type="hidden"   name="id" value="">
            <input type="text" name="name" value="" placeholder="Camping" required>
						<label for="starterPacks">Starter Pack:</label>

						<select name="starterpack" id="starterPack">
							<option value="none">none</option>
							<option value="bbq">BBQ</option>
							<option value="camping">Camping</option>
							<option value="canoeing">Canoeing</option>
							<option value="hiking">Hiking</option>
							<option value="picnic">Picnic</option>
							<option value="potluck">Potluck</option>
							<option value="roadtrip">Road Trip</option>
							<option value="swimming">Swimming</option>
						</select>
            </div>
            <div class="event-input">
                <label for="eventdate" class="text-light">Event date <span class='requiredStar'>*</span> </label>
                <input type="date" name="eventdate" value="" required>
            </div>
            <div class="event-input">
                <label for="description" class="text-light" style="display : block; width: 200px">Event description <span class='requiredStar'>*</span></label>
                <textarea type="text" name="description" placeholder="Explain about the event" rows="10" cols="30" value="" required></textarea>
            </div>
        </div>


        <div class="form-group">
            <button type="submit" class="button-addition update">Save</button>
        </div>

    </div>
</form>
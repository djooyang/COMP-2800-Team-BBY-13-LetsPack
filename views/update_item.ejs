
<!-- include header -->
<%- include('include/_header') %>
<!-- /include header -->

  <!-- Main Site -->
  <main id="site-main">
    <div class="container">
        <div class="box-nav d-flex justify-between">
           <div class="filter">
               <a href="/items?id=<%= item.eventId %>"><i class="fas fa-angle-double-left"></i>Items</a>
           </div>
        </div>
        <div class="form-title text-center">
            <h2 class="form-heading">Update Item</h2>
            <span class="text-light">Use the below form to Update an item</span>
        </div>

        <!-- add user form -->
         <!-- form handling -->
 <form method="POST" id="update_item">
    <div class="new_user">
        <div>
            
             <div class="form-group">
                 <label for="item" class="text-light">Item Name</label>
                 <input type="hidden" name="id" value="<%= item._id %>">
                 <input type="text" name="name" value="<%= item.name %>" placeholder="Frying pen" required>
             </div>
             <div class="form-group">
                 <label for="qty" class="text-light">Quantity</label>
                 <input type="number" name="qty" value="<%= item.qty %>" placeholder="Quantity" required>
             </div>
             <div class="form-group">
                 <input type="hidden" name="owner" value="<%= item.owner %>">
							   <input type="hidden" name="eventId" value="<%= item.eventId %>">
             </div>









        </div>

        <div class="form-group">
            <button type="submit" class="button-addition update">Save</button>
        </div>

    </div>
</form>
       
    </div>
</main>
<!-- /Main Site -->


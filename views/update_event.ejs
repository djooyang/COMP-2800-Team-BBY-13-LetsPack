
<!-- include header -->
<%- include('include/_header') %>
<!-- /include header -->

  <!-- Main Site -->
  <main id="site-main">
    <div class="container">
        <div class="box-nav d-flex justify-between">
           <div class="filter">
               <a href="/profile"><i class="fas fa-angle-double-left"></i>Events</a>
           </div>
        </div>
        <div class="form-title text-center">
            <h2 class="form-heading">Update Event</h2>
            <span class="text-light">Use the below form to Update an event</span>
        </div>

        <!-- add user form -->
         <!-- form handling -->
 <form method="POST" id="update_event">
    <div class="new_user">
        <div class="form-group">
             <div class="event-input">
                <label for="name" class="text-light">Name</label>
            <input type="hidden"   name="id" value="<%= event._id %>">
            <input type="text" name="name" value="<%= event.name %>" placeholder="Camping" required>
            </div>
            <div class="event-input">
                <label for="eventdate" class="text-light">Event date</label>
                <input type="date" name="eventdate" value="<%= event.eventdate %>" required>
            </div>
            <div class="event-input">
                <label for="description" class="text-light" style="display : block; width: 200px">Event description</label>
                <textarea type="text" name="description" placeholder="Explain about the event" rows="10" cols="30" value= required><%= event.description %></textarea>
            </div>





        </div>

        <div class="form-group">
            <button type="submit" class="button-addition update">Save</button>
        </div>

    </div>
</form>
       
    </div>
</main>

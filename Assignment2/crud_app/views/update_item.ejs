
<!-- include header -->
<%- include('include/_header') %>
<!-- /include header -->

  <!-- Main Site -->
  <main id="site-main">
    <div class="container">
        <div class="box-nav d-flex justify-between">
           <div class="filter">
               <a href="/items"><i class="fas fa-angle-double-left"></i>Items</a>
           </div>
        </div>
        <div class="form-title text-center">
            <h2 class="text-dark">Update Item</h2>
            <span class="text-light">Use the below form to Update an item</span>
        </div>

        <!-- add user form -->
         <!-- form handling -->
 <form method="POST" id="update_item">
    <div class="new_user">
        <div class="form-group">
            
            <div>
                <label for="name" class="text-light">Item Name</label>
                <input type="hidden" name="id" value="<%= item._id %>">
                <input type="text" name="name" value="<%= item.name %>" placeholder="Frying pen">
    
            </div>
            <div>
                <label for="qty" class="text-light">Quantity</label>
                <input type="number" name="qty" value="<%= item.qty %>" placeholder="Quantity">
            </div>
            <div>
                <label for="des" class="text-light">Description</label>
                <input type="text" name="des" value="<%= item.des %>" placeholder="Description about item">
            </div>
            <div>
                <label for="owner" class="text-light">Owner</label>
                <input type="text" name="owner" value="<%= item.owner %>" placeholder="Owner">
            </div>










        </div>

        <div class="form-group">
            <button type="submit" class="btn text-dark update">Save</button>
        </div>

    </div>
</form>
       
    </div>
</main>
<!-- /Main Site -->

